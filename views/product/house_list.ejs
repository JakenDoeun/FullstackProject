<%- include('../partials/header') %>
<link rel="stylesheet" href="css/house_list.css">
<header class="container d-flex justify-content-between align-items-center py-3">
    <img src="uploads\logo.svg fill.png" alt="" width="110">
    
    <nav>
        <ul class="nav">
            <li class="nav-item"><a href="#" class="nav-link">Home</a></li>
            <li class="nav-item"><a href="#" class="nav-link">Buy</a></li>
            <li class="nav-item"><a href="#" class="nav-link">Selling</a></li>
            <li class="nav-item"><a href="#" class="nav-link">Rent</a></li>
            <li class="nav-item"><a href="#" class="nav-link">Contact</a></li>
        </ul>
    </nav>
    <div style="display: flex; gap: 20px;">
        <a href="#" class="btn btn-outline-secondary">Add Property</a>
        <svg xmlns="http://www.w3.org/2000/svg" width="37" height="37" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="0.75" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-user"><circle cx="12" cy="12" r="10"></circle><circle cx="12" cy="10" r="3"></circle><path d="M7 20.662V19a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v1.662"></path></svg>        
    </div>
</header>

<section class="hero-section">
    <h2>Find Your Perfect Home</h2>

    <form class="search-bar d-flex">
        <input type="text" class="form-control" placeholder="Enter Name, Keywords...">
        <button type="submit" class="btn btn-success">Search</button>
    </form>
</section>

<div class="row">
    <% products.forEach(product => { %> 
        <div class="col">
            <div class="card h-100">
                <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                <div class="card-body">
                    <span class="badge bg-success"><%= product.type %></span> <!-- Product Type (e.g., "For Sell") -->
                    <h5 class="card-title mt-2"><%= product.name %></h5>
                    <p class="text-muted"><i class="bi bi-geo-alt"></i> <%= product.address_info %></p> <!-- Address -->
                    <p>
                        <strong><%= product.bedrooms %></strong> Bed | <strong><%= product.bathrooms %></strong> Bath | <strong><%= product.size %></strong> sq ft
                    </p>
                    <p class="price fw-bold text-danger">$<%= product.price %>/month</p> <!-- Price -->
                </div>
            </div>
        </div>
    <% }) %>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<%- include('../partials/footer') %>