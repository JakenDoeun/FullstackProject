<%- include('../partials/header') %>
<link rel="stylesheet" href="css/house_list.css">


<section class="hero-section">
    <h2>Find Your Perfect Home</h2>

    <form class="search-bar d-flex">
        <input type="text" class="form-control" placeholder="Enter Name, Keywords...">
        <button type="submit" class="btn btn-success">Search</button>
    </form>
</section>

<div class="container">
    <div class="row g-4">
        <% if (products && Array.isArray(products) && products.length > 0) { %>
            <% products.forEach((product, index) => { %>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100">
                        <div class="position-relative">
                            <!-- Image -->
                            <img src="<%= product.img %>" class="card-img-top" alt="<%= product.name %>" style="object-fit: cover; height: 200px;">
                            <!-- Badge -->
                            <span class="badge bg-success position-absolute top-0 start-0 m-2"><%= product.type %></span> <!-- Product Type -->
                        </div>
                        <div class="card-body">
                            <h5 class="card-title mt-2"><%= product.name %></h5>
                            <p class="text-muted"><i class="bi bi-geo-alt"></i> <%= product.address_info %></p> <!-- Address -->
                            <p>
                                <strong><%= product.bedroom %></strong> Bed | <strong><%= product.bathroom %></strong> Bath | <strong><%= product.size %></strong> sq ft
                            </p>
                             <!-- Price -->
                            <p class="price fw-bold text-danger">
                                Price: 
                                <%= product.type === 'Rent' 
                                      ? `${product.price}$/month` 
                                      : `${product.price}$` %>
                              </p>
                      
                        </div>
                    </div>
                </div>
                <% if (index === 4) { %> <!-- If there are 5 items, break after the first row -->
                    </div>
                    <div class="row g-4">
                <% } %>
            <% }); %>
        <% } else { %>
            <p>No properties found.</p>
        <% } %>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<%- include('../partials/footer') %>