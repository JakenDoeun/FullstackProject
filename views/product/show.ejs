<%- include('../partials/header') %>
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="/css/show.css">

<!-- Page Title -->
<div class="container text-center my-5">
  <h2 class="page-title">House Details</h2>
</div>

<!-- House Details Section -->
<div class="container details-container">
  <div class="details-row">
    <!-- House Image Section -->
    <div class="image-container">
      <img src="<%= product.img %>" alt="<%= product.name %>" class="house-image">
    </div>
  
    <!-- House Information Section -->
    <div class="details">
      <h2 class="house-title"><%= product.name %></h2>
      <p class="description"><strong>Description:</strong> <%= product.description || "No description available" %></p>
      <p class="price"><i class="fas fa-dollar-sign"></i> <strong>Price:</strong> $<%= product.price %></p>
      <p class="location"><i class="fas fa-map-marker-alt"></i> <strong>Location:</strong> <%= product.address_info %></p>

      <div class="features">
        <p><i class="fas fa-bed"></i> <strong>Bedrooms:</strong> <%= product.bedroom %></p>
        <p><i class="fas fa-bath"></i> <strong>Bathrooms:</strong> <%= product.bathroom %></p>
        <p><i class="fas fa-ruler-combined"></i> <strong>Area:</strong> <%= product.size %> sq ft</p>
      </div>

      <div class="button-section">
        <a href="#" class="btn btn-primary btn-custom">Buy Now</a>
        <a href="#schedule-tour" class="btn btn-success btn-custom">Schedule a Tour</a>
        <a href="/houses" class="btn btn-secondary btn-custom">Back to House List</a>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>